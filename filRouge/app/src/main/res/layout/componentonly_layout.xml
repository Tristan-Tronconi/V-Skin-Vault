<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:layout_constraintTop_toBottomOf="@id/navLayout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/component"
    android:background="#e4e4e4"

    >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/frame_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nom"
            android:layout_margin="5dp"
            android:id="@+id/imageView"
            android:focusable="false"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:id="@+id/nom"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:focusable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin perso • C1S1 • EPIQUE "
            app:layout_constraintTop_toBottomOf="@id/nom"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:id="@+id/categorie"
            android:focusable="false"
            />

        <RatingBar
            android:id="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:numStars="5"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/nom"
            app:layout_constraintEnd_toEndOf="parent"
            android:focusable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            app:layout_constraintTop_toBottomOf="@id/categorie"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:id="@+id/prix"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:focusable="false"
            />

        <ImageView
            android:id="@+id/trash"
            android:layout_width="38dp"
            android:layout_height="31dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/panier"
            app:layout_constraintEnd_toEndOf="@id/component"
            app:layout_constraintTop_toBottomOf="@id/categorie" />





</androidx.constraintlayout.widget.ConstraintLayout>